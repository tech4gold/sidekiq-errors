<header class="row">
  <div class="col-sm-5">
    <h3><%= t('Errors') %></h3>
  </div>
</header>

<% if @errors.size > 0 %>
<table class="table table-striped table-bordered table-white">
  <thead>
    <tr>
      <th><%= t('class') %></th>
      <th><%= t('JobCount') %></th>
    </tr>
  </thead>
  <tbody>
  <% @errors.each do |error, job_count| %>
    <tr>
      <td><a href="<%= root_path %>errors/<%= error %>"><%= error %></a></td>
      <td><%= job_count %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<% else %>
<div class="alert alert-success">No <%= t('Failures') %></div>
<% end %>